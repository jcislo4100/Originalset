{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "investment_dashboard.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "sudo apt update && sudo apt upgrade -y; [ -f packages.txt ] && sudo xargs apt install -y < packages.txt; pip3 install --user -r requirements.txt || true; pip3 install --user streamlit pandas numpy numpy-financial openpyxl plotly",
  "postAttachCommand": {
    "server": "streamlit run investment_dashboard.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501]
}
